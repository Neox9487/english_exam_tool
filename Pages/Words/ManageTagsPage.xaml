<Page x:Class="EnglishApp.Views.ManageTagsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Tags Page">

    <Grid>
        <Border Padding="20" CornerRadius="8"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <StackPanel>
                <TextBlock Text="Manage Tags" FontSize="18" FontWeight="Bold"
                           Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <!-- Tag 表 -->
                <ListBox x:Name="TagListBox" Height="200" Margin="0,0,0,10"
                         DisplayMemberPath="Tag"
                         SelectionMode="Single"/>

                <!-- 新增 tag -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="NewTagTextBox" Width="250" Margin="0,0,10,0"/>
                    <Button Content="Add" Width="80" Click="AddTagButton_Click"/>
                </StackPanel>

                <!-- 刪除 / back buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Delete" Width="100" Margin="5" Click="DeleteTagButton_Click"/>
                    <Button Content="Back" Width="100" Margin="5" Click="BackButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>