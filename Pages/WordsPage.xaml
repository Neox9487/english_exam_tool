<Page x:Class="EnglishApp.Views.WordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Words Page" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>    
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tag查詢 排序 搜尋-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Tag" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="TagFilterComboBox"/>

            <TextBlock Text="Sort" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="SortComboBox"/>

            <TextBox x:Name="SearchTextBox" Margin="20,0,0,0" VerticalAlignment="Center" Width="120"/>
            <Button Content="Search" Margin="5,0,0,0" Padding="3,2" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- 單字 -->
        <DataGrid x:Name="WordsDataGrid" Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{Binding Words}" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Word" Binding="{Binding English}" Width="100"/>
                <DataGridTextColumn Header="Meaning" Binding="{Binding Meaning}" Width="*"/>
                <DataGridTextColumn Header="POS" Binding="{Binding POS}" Width="100"/>
                <DataGridTemplateColumn Header="" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edit" Margin="2" Padding="4,2"/>
                                <Button Content="Delete" Margin="2" Padding="4,2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
         
        <!-- 新增單字 新增Tag 回主頁-->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Add Word" Margin="5,0,0,0" Padding="6,2" Click="AddWordButton_Click"/>
                <Button Content="Add Tag" Margin="5,0,0,0" Padding="6,2" Click="AddTagButton_Click"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="Back"
                    Margin="10,0,0,0"
                    Padding="6,2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Click="BackToMenu_Button_Click"/>
        </Grid>
    </Grid>
</Page>