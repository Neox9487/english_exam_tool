<Page x:Class="EnglishApp.Views.AddWordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Word">

    <Grid> 
        <Border
            Padding="30"
            CornerRadius="10"
            Background="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="500"
            >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="New Word" FontSize="20" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Left"/>

                <TextBlock Text="Word:" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox x:Name="WordTextBox" Grid.Row="1" Margin="150,10,0,0" Width="200"/>

                <TextBlock Text="Chinese Meaning:" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox x:Name="MeaningTextBox" Grid.Row="2" Margin="150,10,0,0" Width="200"/>

                <TextBlock Text="Part of Speech:" Grid.Row="3" VerticalAlignment="Center"/>
                <ComboBox x:Name="POSComboBox" Grid.Row="3" Margin="150,10,0,0" Width="200"/>

                <TextBlock Text="Tags:" Grid.Row="4" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <ComboBox x:Name="TagsComboBox" ItemsSource="{Binding Tags}" Grid.Row="4" Margin="150,10,0,0" Width="200"/>

                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <Button Content="Save"
                            Width="100"
                            Padding="6,2"
                            Margin="0,0,10,0"
                            Click="SaveButton_Click"/>

                    <Button Content="Cancel"
                            Width="100"
                            Padding="6,2"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>