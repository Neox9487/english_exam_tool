<Page x:Class="EnglishApp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Page">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="English Exam Tool" 
                       Foreground="#FF007ACC" 
                       FontSize="26" 
                       FontWeight="bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,17"/>
            <Button Content="Words" Width="120" Height="40" Click="Words_Button_Click" Margin="0,0,0,8"/>
            <Button Content="Quiz" Width="120" Height="40" Click="Quiz_Button_Click"/>
        </StackPanel>
    </Grid>
</Page>