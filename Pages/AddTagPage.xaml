<Page x:Class="EnglishApp.Views.AddTagPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Tag Page">

    <Grid>
        <Border Background="White" Padding="20" CornerRadius="8" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" >
            <StackPanel>
                <TextBlock Text="Add New Tag" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <TextBox x:Name="TagTextBox" Margin="0,0,0,10" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="Save" Width="80" Margin="5" />
                    <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>